float plot(vec2 str){
	//hermit interpolation	
	return smoothstep(0.02,0.0, abs(str.y - str.x));
}

void fragment(){
	
	vec2 str = UV.xy/TEXTURE_PIXEL_SIZE;
	
	float y = str.x;
	
	vec3 color = vec3(y);
	
	float pct = plot(str);
	color = (1f - pct)*color + pct*vec3(0f,1f,0f);
	
	COLOR = vec4(color,1);
	
	
}
